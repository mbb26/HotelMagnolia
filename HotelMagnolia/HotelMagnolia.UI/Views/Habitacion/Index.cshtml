@model IEnumerable<HotelMagnolia.UI.Models.HABITACION>

@{
    ViewBag.Title = "Lista de Habitaciones";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID_HABITACION)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NUMERO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NOMBRE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TIPO_HABITACION)
        </th>
        <th colspan="3">Acciones</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID_HABITACION)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NUMERO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NOMBRE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TIPO_HABITACION1.NOMBRE)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.ID_HABITACION })
            </td>
            <td>
                @Html.ActionLink("Detalles", "Details", new { id = item.ID_HABITACION })
            </td>
            <td>
                @Html.ActionLink("Eliminar", "Delete", new { id = item.ID_HABITACION })
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Crear Nueva", "Create", null, new { @class = "btn btn-primary" })
</p>
