@model IEnumerable<HotelMagnolia.UI.Models.HABITACION>

@{
    ViewBag.Title = "Lista Habitaciones";
}

<h2>@ViewBag.Title</h2>


<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Numero
        </th>
        <th>
            Nombre
        </th>
        <th>
            Descripcion
        </th>
        <th>
            Foto
        </th>
        <th>
            Precio
        </th>
        <th>
            Tipo
        </th>
        <th colspan="3">Acciones</th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ID_HABITACION)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NUMERO)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NOMBRE)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DESCRIPCION)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FOTO)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PRECIO.PRECIO1)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TIPO_HABITACION)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.ID_HABITACION })
    </td>
    <td>

        @Html.ActionLink("Detalles", "Details", new { id = item.ID_HABITACION })
    </td>
    <td>

        @Html.ActionLink("Eliminar", "Delete", new { id = item.ID_HABITACION })
    </td>
</tr>
}

</table>
<p>
    @Html.ActionLink("Crear Nueva Habitacion", "Create")
</p>
