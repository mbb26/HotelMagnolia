@using HotelMagnolia.UI.Models
@{
    USUARIO usuario = (USUARIO)Session["Usuario"];
}
@model IEnumerable<HotelMagnolia.UI.Models.USUARIO>

@{
    ViewBag.Title = "Lista de Usuarios";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            Nombre de Usuario
        </th>
        <th>
            E-Mail
        </th>
        <th>
            Rol
        </th>
        <th colspan="3">Acciones</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.USER_NAME)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CORREO)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ROL.NOMBRE)
    </td>
    @if (usuario.ID_USUARIO != item.ID_USUARIO)
    {
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.ID_USUARIO })
        </td>
        <td>
            @Html.ActionLink("Detalles", "Details", new { id = item.ID_USUARIO })
        </td>
        <td>
            @Html.ActionLink("Eliminar", "Delete", new { id = item.ID_USUARIO }, new { @class = "glyphicon  glyphicon-trash" })
        </td>
    }
    else
    {
        <td colspan="3">No se puede realizar acciones sobre el usuario en sesi&oacute;n</td>
    }
</tr>
    }

</table>
<p>
    @Html.ActionLink("Crear Nuevo Usuario", "Create", null, new { @class = "btn btn-primary" })
</p>
