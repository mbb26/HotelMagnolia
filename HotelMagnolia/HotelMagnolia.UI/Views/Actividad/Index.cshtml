@model IEnumerable<HotelMagnolia.UI.Models.ACTIVIDAD>

@{
    ViewBag.Title = "Lista de Actividades";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Nombre
        </th>
        <th>
            Descripcion
        </th>
        <th colspan="3">Acciones</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ID_ACTIVIDAD)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NOMBRE)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DESCRIPCION)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.ID_ACTIVIDAD })
    </td>
    <td>
        @Html.ActionLink("Detalles", "Details", new { id = item.ID_ACTIVIDAD })
    </td>
    <td>
        @Html.ActionLink("Eliminar", "Delete", new { id = item.ID_ACTIVIDAD })
    </td>
</tr>
    }

</table>

<p>
    @Html.ActionLink("Crear Nueva", "Create", null, new { @class = "btn btn-primary" })
</p>