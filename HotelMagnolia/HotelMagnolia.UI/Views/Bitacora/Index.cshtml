@model IEnumerable<HotelMagnolia.UI.Models.BITACORA>

@{
    ViewBag.Title = "Lista Bitacora";
}

<h2>@ViewBag.Title</h2>


<table class="table">
    <tr>
        <th>
            Fecha
        </th>
        <th>
            ID
        </th>
        <th>
            Descripcion
        </th>
        <th>
            Detalle
        </th>
        <th>
            Tipo
        </th>
        @*<th>
            Usuario
        </th>*@
        <th colspan="3">Acciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FECHA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ID_BITACORA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Registro_en_detalle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TIPO_BITACORA.NOMBRE)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.USUARIO.NOMBRE)
        </td>*@
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ID_BITACORA })
        </td>
        <td>
            @Html.ActionLink("Detalles", "Details", new { id=item.ID_BITACORA })
        </td>
        <td>
            @Html.ActionLink("Eliminar", "Delete", new { id=item.ID_BITACORA })
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Crear Nueva Bitacora", "Create")
</p>
