<section class="welcome_area bg-img background-overlay">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <div class="hero-content">
                    <h2>Búsqueda en la Bitácora</h2>
                    <h4>Usuario:</h4>
                    <input class="input" type="text" name="user" id="user"><br>
                    <h4>Fecha desde:</h4>
                    <input class="input" type="date" name="from" id="from"><br>
                    <h4>Fecha hasta:</h4>
                    <input class="input" type="date" name="to" id="to"><br>
                    <h4>Tipo de acción:</h4>
                    <select name="tipo" id="tipo">
                        <option value="agregar">Agregar</option>
                        <option value="eliminar">Eliminar</option>
                        <option value="modificar">Modificar</option>
                        <option value="todas">Todas</option>
                    </select>
                    <br><br><br>

                    @Html.ActionLink("Buscar", "*", "Bitacora", null, new { @class = "btn essence-btn" })
                </div>
            </div>
        </div>
    </div>
</section>