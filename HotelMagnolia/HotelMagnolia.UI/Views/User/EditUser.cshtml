<section class="welcome_area bg-img background-overlay">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <div class="hero-content">
                    <form action="#">
                        <h2>Editar Contraseña de Usuario</h2>
                        <h4>Consecutivo:</h4>
                        <input class="input" type="text" name="txtConsecutivo" id="txtUser" value="USR2"
                               disabled="disabled"><br>
                        <h4>Usuario:</h4>
                        <input class="input" type="text" name="txtUser" id="txtUser" value="Metallan"
                               disabled="disabled"><br>
                        <h4>Contraseña actual:</h4>
                        <input class="input" type="password" name="current" id="current" value="mandarina"
                               disabled="disabled"><br>
                        <h4>Contraseña nueva:</h4>
                        <input class="input" type="password" name="password" id="password"><br>
                        <h4>Confirmar contraseña:</h4>
                        <input class="input" type="password" name="confirmpass" id="confirmpass"><br><br>

                        <td>@Html.ActionLink("Guardar Cambios", "ListUser", "User", null, new { @class = "btn essence-btn" })</td>
                        <td>@Html.ActionLink("Cancelar", "ListUser", "User", null, new { @class = "btn essence-btn" })</td>

                        <br /><input type="reset" value="Restablecer" class="reset-form">
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>